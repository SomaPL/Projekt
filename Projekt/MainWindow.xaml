<Window x:Class="Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
         Title="MainWindow" Height="450" Width="800" Background="MediumPurple">
    <Border Background="Black" CornerRadius="20" Margin="20">
        <Grid>
            <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top" HorizontalAlignment="Stretch" >
                <Button Content="Wypozyczalnia" MinWidth="350" Margin="20,0,10,0" Click="Rental_Clicked"></Button>
                <Button Content="Serwis" MinWidth="350" Margin="10,0,20,0" Click="Service_Clicked"></Button>
            </StackPanel>
            <Frame x:Name="Main" Margin="0,40,0,0" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </Border>
</Window>
