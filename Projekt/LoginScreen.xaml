<Window x:Class="Projekt.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="500" FontSize="14" Background="DarkRed">
    <Border Background="Black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="35" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" FontSize="20"></Label>
            <TextBox Name="txtUsername" Background="Gray" Foreground="White" FontSize="20"></TextBox>
            <Label Content="Password" Foreground="White" FontSize="20"></Label>
            <PasswordBox Name="txtPassword" Background="Gray" Foreground="White" FontSize="20"></PasswordBox>
            <Button Name="btnLogin"  Content="Login" Margin="40 "  Background="Gray" Foreground="White" FontSize="20" Click="btnLogin_Click"></Button>
            <Button Name="btnRegister"  Content="Register"  Background="Gray" Foreground="White" FontSize="20" Margin="40,0,40,0" Click="btnRegister_Click"></Button>
        </StackPanel>
    </Border>
</Window>
